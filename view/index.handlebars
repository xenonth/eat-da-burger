<section>
  <h1>EAT IT! YOU WANT TO EATS IT!</h1>
</section>

<!--INPUT Field to add more burgers to the list, with button linked to insert Query-->
<section>
  <h3>Burgers to Devour:</h3>
  <form class="create-form">
    <article class="form-group">
      <label for="yum">Burger</label><br>
      <input type="radio" name="yum">
    </article>

    <button type = "submit">To Devour</button>
  </form>
</section>

<!--Burger list of each uneaten burger-->
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<!--Burger list of each eaten burger-->
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>